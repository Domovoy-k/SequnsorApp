<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/soundButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />

            <Button
                android:id="@+id/soundButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />

            <Button
                android:id="@+id/soundButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstSound_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="First Sound" />

            <TextView
                android:id="@+id/secondSound_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Second Sound" />

            <TextView
                android:id="@+id/thirdSound_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Third Sound" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/reaction_startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reaction_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reaction_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Test"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/reaction_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Test"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/reaction_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Test"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/reaction_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Test"
            android:textSize="36sp" />
    </LinearLayout>
</LinearLayout>